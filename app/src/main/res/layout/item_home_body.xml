<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/item_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_header_hot"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_light"
            android:text="热门焦点"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_type_rank_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_rank_bg"
            android:drawableLeft="@drawable/ic_header_indicator_rank"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:text="排行榜"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>


    <GridView
        android:clipToPadding="false"
        android:id="@+id/gd_home_body"
        android:layout_margin="10dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="8dp"
        android:numColumns="2"
        android:layout_width="match_parent"
        android:layout_height="900dp"/>
</LinearLayout>